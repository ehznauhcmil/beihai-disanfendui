---
const currentYear = new Date().getFullYear();

const footerLinks = {
  about: [
    { name: 'Our History', href: '/about/history' },
    { name: 'Leadership', href: '/about/leadership' },
    { name: 'Our Company', href: '/about/company' },
    { name: 'Join Us', href: '/join' },
  ],
  programs: [
    { name: 'Badgework', href: '/activities/badge' },
    { name: 'Company Band', href: '/activities/band' },
    { name: 'Skills Training', href: '/activities/skills' },
    { name: 'Camps & Events', href: '/activities/camps' },
  ],
  resources: [
    { name: 'Activities', href: '/activities' },
    { name: 'Achievements', href: '/about/achievements' },
    { name: 'Contact', href: '/contact' },
  ],
};
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <!-- Main Footer Content -->
    <div class="py-16">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-8 lg:gap-12">

        <!-- Company Info -->
        <div class="lg:col-span-2">
          <div class="flex items-center space-x-2 mb-4">
            <img
              src="/logo.png"
              alt="3rd Butterworth Company logo"
              class="h-8 w-auto"
              loading="lazy"
            />
            <span class="font-semibold text-gray-900 text-base">3rd Butterworth</span>
          </div>
          <p class="text-sm text-gray-600 mb-6 max-w-sm leading-relaxed">
            Nurturing young men through faith-based activities, disciplined training, and community service. Sure and Steadfast.
          </p>
        </div>

        <!-- About Links -->
        <div>
          <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-4">About</h3>
          <ul class="space-y-3">
            {footerLinks.about.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-gray-600 hover:text-gray-900 transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Programs Links -->
        <div>
          <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-4">Programs</h3>
          <ul class="space-y-3">
            {footerLinks.programs.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-gray-600 hover:text-gray-900 transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Resources Links -->
        <div>
          <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-4">Resources</h3>
          <ul class="space-y-3">
            {footerLinks.resources.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-gray-600 hover:text-gray-900 transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Contact Info -->
    <div class="border-t border-gray-200 py-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <div>
          <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Location</h4>
          <p class="text-sm text-gray-600 leading-relaxed">
            Butterworth, Penang<br />
            Malaysia
          </p>
        </div>
        <div>
          <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Contact</h4>
          <p class="text-sm text-gray-600 leading-relaxed">
            Email: info@3rdbutterworth.org<br />
            Phone: +60 12-345 6789
          </p>
        </div>
        <div>
          <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Meeting Times</h4>
          <p class="text-sm text-gray-600 leading-relaxed">
            Every Saturday<br />
            2:00 PM - 5:00 PM
          </p>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-200 py-6">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-xs text-gray-500">
          Â© {currentYear} 3rd Butterworth Company, The Boys' Brigade Malaysia. All rights reserved.
        </p>
        <div class="flex space-x-6">
          <a href="/privacy" class="text-xs text-gray-500 hover:text-gray-900 transition-colors">
            Privacy Policy
          </a>
          <a href="/terms" class="text-xs text-gray-500 hover:text-gray-900 transition-colors">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
