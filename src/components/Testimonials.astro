---
import '../styles/global.css';
import testimonials from '../data/testimonials.json';
---

<section class="bg-white py-20 sm:py-24 lg:py-32">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="text-center mb-16 scroll-reveal">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 tracking-tight">
        What People Say
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Hear from parents and officers who have witnessed the transformative impact of our programs.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 max-w-6xl mx-auto">
      {testimonials.map(({ quote, author, role, image }, index) => (
        <div class={`relative bg-gray-50 rounded-3xl p-8 sm:p-10 hover:shadow-xl transition-shadow duration-300 scroll-reveal`} data-delay={index * 100}>
          <!-- Quote Icon -->
          <div class="absolute top-8 right-8 opacity-10">
            <svg class="w-16 h-16 text-[#0071e3]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
          </div>

          <!-- Testimonial Content -->
          <div class="relative">
            <blockquote class="text-lg sm:text-xl text-gray-700 leading-relaxed mb-6">
              "{quote}"
            </blockquote>

            <div class="flex items-center gap-4">
              <div class="w-14 h-14 rounded-full bg-[#0071e3] flex items-center justify-center text-white text-xl font-bold overflow-hidden">
                {author.split(' ').map(n => n[0]).join('')}
              </div>
              <div>
                <div class="font-semibold text-gray-900 text-lg">{author}</div>
                <div class="text-gray-600">{role}</div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
