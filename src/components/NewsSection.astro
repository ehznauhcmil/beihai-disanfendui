---
import '../styles/global.css';
---

<section class="bg-gray-50 py-16 sm:py-20 lg:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-12">News & Events</h2>

    <div class="border-2 border-dashed border-gray-300 rounded-lg py-16 px-6 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">Stay Tuned for Updates</h3>
      <p class="text-gray-700 mb-8 max-w-2xl mx-auto">
        Check back soon for the latest news and upcoming events from the 3rd Butterworth Company.
      </p>
      <a 
        href="/news" 
        class="inline-block bg-white border-2 border-gray-300 text-gray-900 px-6 py-2 rounded-md font-medium hover:bg-gray-50 transition-colors"
      >
        View Past Events
      </a>
    </div>
  </div>
</section>
