---
import '../styles/global.css';
import highlightsData from '../data/highlights.json';

// Sort by date (most recent first) and get top 3
const latestHighlights = highlightsData
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 3);

// Format date for display
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long' });
};
---

<section class="bg-gray-50 py-20 sm:py-24 lg:py-32">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 tracking-tight">
        Latest Highlights
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Stay updated with our recent activities, achievements, and community impact.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {latestHighlights.map((highlight) => (
        <div class="group overflow-hidden rounded-3xl bg-white transition-all duration-300 hover:shadow-2xl">
          <div class="relative h-56 w-full overflow-hidden">
            <img
              src={highlight.imageSrc}
              alt={highlight.title}
              class="h-full w-full object-cover transition duration-700 group-hover:scale-110"
              loading="lazy"
              decoding="async"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
            <div class="absolute top-4 left-4">
              <span class="inline-block px-3 py-1 text-xs font-semibold text-white bg-[#0071e3] rounded-full">
                {highlight.category}
              </span>
            </div>
          </div>
          <div class="p-6">
            <div class="flex items-center gap-2 text-sm text-gray-500 mb-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <time>{formatDate(highlight.date)}</time>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{highlight.title}</h3>
            <p class="text-base text-gray-600 leading-relaxed">{highlight.description}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/news"
        class="inline-block bg-[#0071e3] text-white px-8 py-3.5 rounded-full font-medium text-base hover:bg-[#0077ed] transition-colors duration-200 cursor-pointer"
      >
        View All Updates
      </a>
    </div>
  </div>
</section>
