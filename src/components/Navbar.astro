---
const navLinks = [
  { name: 'Home', href: '/' },
  { 
    name: 'About Us', 
    href: '/about',
    dropdown: [
      { name: "History of The Boys' Brigade", href: '/about/history' },
      { name: 'Our Company', href: '/about/company' },
      { name: 'Achievements & Milestones', href: '/about/achievements' },
      { name: 'Leadership', href: '/about/leadership' },
      {
        name: 'Platoon',
        children: [
          { name: 'SMJK Chung Ling Butterworth', href: '/about/platoon-alpha' },
          { name: 'SMK St. Mark', href: '/about/platoon-bravo' },
        ]
      },
    ]
  },
  { 
    name: 'Activities', 
    href: '/activities',
    dropdown: [
      { name: 'Badgework Program', href: '/activities/badge' },
      { name: 'Company Band', href: '/activities/band' },
      { name: 'skills', href: '/activities/skills' },
      { name: 'Camps & Events', href: '/activities/camps' },
    ]
  },
  // { 
  //   name: 'News & Events', 
  //   href: '/news',
  //   dropdown: [
  //     { name: 'Latest News', href: '/news/latest' },
  //     { name: 'Upcoming Events', href: '/news/events' },
  //     { name: 'Past Events', href: '/news/past' },
  //     { name: 'Photo Gallery', href: '/news/gallery' },
  //   ]
  // },
  { name: 'Contact', href: '/contact' },
];
---

<nav class="fixed inset-x-0 top-0 z-50 bg-slate-950/90 backdrop-blur text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 focus:outline-none focus:ring-2 focus:ring-white/60 rounded-md px-1 -mx-1">
        <img
          src="/logo.png"
          alt="3rd Butterworth Company logo"
          class="h-9 w-auto rounded-md border border-white/20 bg-white/10 p-1"
          loading="lazy"
          decoding="async"
        />
        <span class="font-semibold text-white text-lg">3rd Butterworth Company</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        {navLinks.map(link => (
          link.dropdown ? (
            <!-- Desktop Dropdown -->
            <div class="relative dropdown-container">
              <button 
                class="text-white/80 hover:text-white font-medium px-3 py-2 rounded-md hover:bg-white/10 transition-colors flex items-center gap-1 dropdown-toggle focus:outline-none focus:ring-2 focus:ring-white/60"
                aria-haspopup="true"
                aria-expanded="false"
              >
                {link.name}
                <svg 
                  class="w-4 h-4 transition-transform dropdown-arrow" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="dropdown-menu absolute left-0 mt-1 w-56 rounded-md bg-slate-950/90 shadow-lg shadow-black/40 py-1 hidden border border-white/10">
                {link.dropdown.map(item => (
                  item.children ? (
                    <div class="relative nested-dropdown">
                      <button
                        type="button"
                        class="flex w-full items-center justify-between px-4 py-2 text-left text-white/80 hover:text-white hover:bg-white/10 transition-colors nested-toggle focus:outline-none focus:ring-2 focus:ring-white/50"
                      >
                        {item.name}
                        <svg
                          class="w-4 h-4 transition-transform nested-arrow"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </button>
                      <div class="nested-menu absolute left-full top-0 ml-2 w-56 rounded-md border border-white/10 bg-slate-950/95 shadow-lg shadow-black/40 py-1 hidden">
                        {item.children.map(child => (
                          <a
                            href={child.href}
                            class="block px-4 py-2 text-white/80 hover:bg-white/10 hover:text-white transition-colors"
                          >
                            {child.name}
                          </a>
                        ))}
                      </div>
                    </div>
                  ) : (
                    <a 
                      href={item.href} 
                      class="block px-4 py-2 text-white/80 hover:bg-white/10 hover:text-white transition-colors"
                    >
                      {item.name}
                    </a>
                  )
                ))}
              </div>
            </div>
          ) : (
            <!-- Regular Link -->
            <a 
              href={link.href} 
              class="text-white/80 hover:text-white font-medium px-3 py-2 rounded-md hover:bg-white/10 transition-colors focus:outline-none focus:ring-2 focus:ring-white/60"
            >
              {link.name}
            </a>
          )
        ))}
        <a 
          href="/join" 
          class="ml-2 rounded-md border border-white/30 bg-white/10 px-6 py-2 font-medium text-white transition hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white/60"
        >
          Join Us
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button" 
        class="md:hidden p-2 rounded-md text-white hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-white/60"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-white/10 bg-slate-950/80">
    <div class="px-4 py-4 space-y-1">
      {navLinks.map(link => (
        link.dropdown ? (
          <!-- Mobile Dropdown -->
          <div class="mobile-dropdown">
            <button 
              class="w-full text-left text-white/80 hover:text-white font-medium py-2 flex items-center justify-between mobile-dropdown-toggle"
            >
              {link.name}
              <svg 
                class="w-4 h-4 transition-transform mobile-dropdown-arrow" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="mobile-dropdown-menu hidden pl-4 space-y-1 mt-1">
              {link.dropdown.map(item => (
                item.children ? (
                  <div class="mobile-nested">
                    <button
                      type="button"
                      class="flex w-full items-center justify-between text-left text-white/70 hover:text-white py-2 mobile-nested-toggle"
                    >
                      {item.name}
                      <svg
                        class="w-4 h-4 transition-transform mobile-nested-arrow"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                      </svg>
                    </button>
                    <div class="mobile-nested-menu hidden pl-4 space-y-1">
                      {item.children.map(child => (
                        <a
                          href={child.href}
                          class="block text-white/60 hover:text-white py-2"
                        >
                          {child.name}
                        </a>
                      ))}
                    </div>
                  </div>
                ) : (
                  <a 
                    href={item.href} 
                    class="block text-white/70 hover:text-white py-2"
                  >
                    {item.name}
                  </a>
                )
              ))}
            </div>
          </div>
        ) : (
          <!-- Regular Mobile Link -->
          <a 
            href={link.href} 
            class="block text-white/80 hover:text-white font-medium py-2"
          >
            {link.name}
          </a>
        )
      ))}
      <a 
        href="/join" 
        class="block rounded-md border border-white/30 bg-white/10 px-6 py-2 font-medium text-white hover:bg-white/20 text-center mt-3 focus:outline-none focus:ring-2 focus:ring-white/60"
      >
        Join Us
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Desktop dropdown functionality
  const dropdownContainers = document.querySelectorAll('.dropdown-container');
  
  dropdownContainers.forEach(container => {
    const toggle = container.querySelector('.dropdown-toggle');
    const menu = container.querySelector('.dropdown-menu');
    const arrow = container.querySelector('.dropdown-arrow');
    const nestedDropdowns = container.querySelectorAll('.nested-dropdown');
    
    toggle?.addEventListener('click', (e) => {
      e.stopPropagation();
      
      // Close other dropdowns
      dropdownContainers.forEach(otherContainer => {
        if (otherContainer !== container) {
          const otherMenu = otherContainer.querySelector('.dropdown-menu');
          const otherArrow = otherContainer.querySelector('.dropdown-arrow');
          otherMenu?.classList.add('hidden');
          otherArrow?.classList.remove('rotate-180');

          const otherNested = otherContainer.querySelectorAll('.nested-dropdown');
          otherNested.forEach(nested => {
            const nestedMenu = nested.querySelector('.nested-menu');
            const nestedArrow = nested.querySelector('.nested-arrow');
            nestedMenu?.classList.add('hidden');
            nestedArrow?.classList.remove('rotate-90');
          });
        }
      });
      
      // Toggle current dropdown
      menu?.classList.toggle('hidden');
      arrow?.classList.toggle('rotate-180');
    });

    nestedDropdowns.forEach(nested => {
      const nestedToggle = nested.querySelector('.nested-toggle');
      const nestedMenu = nested.querySelector('.nested-menu');
      const nestedArrow = nested.querySelector('.nested-arrow');

      nestedToggle?.addEventListener('click', (event) => {
        event.stopPropagation();

        nestedDropdowns.forEach(otherNested => {
          if (otherNested !== nested) {
            const otherMenu = otherNested.querySelector('.nested-menu');
            const otherArrow = otherNested.querySelector('.nested-arrow');
            otherMenu?.classList.add('hidden');
            otherArrow?.classList.remove('rotate-90');
          }
        });

        nestedMenu?.classList.toggle('hidden');
        nestedArrow?.classList.toggle('rotate-90');
      });
    });
  });

  // Close dropdowns when clicking outside
  document.addEventListener('click', () => {
    dropdownContainers.forEach(container => {
      const menu = container.querySelector('.dropdown-menu');
      const arrow = container.querySelector('.dropdown-arrow');
      menu?.classList.add('hidden');
      arrow?.classList.remove('rotate-180');

      const nestedDropdowns = container.querySelectorAll('.nested-dropdown');
      nestedDropdowns.forEach(nested => {
        const nestedMenu = nested.querySelector('.nested-menu');
        const nestedArrow = nested.querySelector('.nested-arrow');
        nestedMenu?.classList.add('hidden');
        nestedArrow?.classList.remove('rotate-90');
      });
    });
  });

  // Mobile dropdown functionality
  const mobileDropdowns = document.querySelectorAll('.mobile-dropdown');
  
  mobileDropdowns.forEach(dropdown => {
    const toggle = dropdown.querySelector('.mobile-dropdown-toggle');
    const menu = dropdown.querySelector('.mobile-dropdown-menu');
    const arrow = dropdown.querySelector('.mobile-dropdown-arrow');
    const nestedDropdowns = dropdown.querySelectorAll('.mobile-nested');
    
    toggle?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
      arrow?.classList.toggle('rotate-180');
    });

    nestedDropdowns.forEach(nested => {
      const nestedToggle = nested.querySelector('.mobile-nested-toggle');
      const nestedMenu = nested.querySelector('.mobile-nested-menu');
      const nestedArrow = nested.querySelector('.mobile-nested-arrow');

      nestedToggle?.addEventListener('click', () => {
        nestedMenu?.classList.toggle('hidden');
        nestedArrow?.classList.toggle('rotate-180');
      });
    });
  });
</script>

<style>
  .dropdown-menu {
    animation: slideDown 0.2s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
