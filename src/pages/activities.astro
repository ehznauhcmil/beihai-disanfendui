---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';

const activities = [
  {
    title: 'Badgework Program',
    description: 'Progressive achievement system that challenges members to develop new skills and earn recognition.',
    href: '/activities/badge',
    icon: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z'
  },
  {
    title: 'Company Band',
    description: 'Musical training and performances that build teamwork, discipline, and artistic expression.',
    href: '/activities/band',
    icon: 'M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3'
  },
  {
    title: 'Skills Training',
    description: 'Hands-on learning experiences that develop practical abilities and leadership qualities.',
    href: '/activities/skills',
    icon: 'M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4'
  },
  {
    title: 'Camps & Events',
    description: 'Outdoor adventures and special activities that foster camaraderie, resilience, and memorable experiences.',
    href: '/activities/camps',
    icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'
  }
];
---

<Layout title="Activities - 3rd Butterworth Company">
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="pt-24 pb-16 px-6 sm:px-8 lg:px-12 bg-gray-50">
      <div class="mx-auto max-w-7xl text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 tracking-tight">
          Our Activities
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Structured experiences shaping disciplined, compassionate leaders through faith, skills, and service.
        </p>
      </div>
    </section>

    <!-- Activities Grid -->
    <section class="py-20 px-6 sm:px-8 lg:px-12">
      <div class="mx-auto max-w-7xl">
        <div class="grid gap-8 md:grid-cols-2">
          {activities.map(({ title, description, href, icon }) => (
            <a
              href={href}
              class="group block p-8 rounded-3xl bg-white border border-gray-200 transition-all hover:shadow-2xl hover:scale-[1.02]"
            >
              <div class="flex items-start gap-6">
                <div class="flex-shrink-0">
                  <div class="w-14 h-14 rounded-2xl bg-[#0071e3] flex items-center justify-center">
                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-2xl font-semibold text-gray-900 mb-3 group-hover:text-[#0071e3] transition-colors">
                    {title}
                  </h3>
                  <p class="text-base text-gray-600 leading-relaxed mb-4">
                    {description}
                  </p>
                  <span class="inline-flex items-center text-sm font-medium text-[#0071e3] group-hover:text-[#0077ed]">
                    Learn more
                    <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-6 sm:px-8 lg:px-12 bg-gray-50">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
          Ready to Join Us?
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          Become part of a community dedicated to personal growth and service.
        </p>
        <a
          href="/contact"
          class="inline-block bg-[#0071e3] text-white px-8 py-3.5 rounded-full font-medium text-base hover:bg-[#0077ed] transition-all hover:scale-105"
        >
          Get in Touch
        </a>
      </div>
    </section>
  </main>
</Layout>
