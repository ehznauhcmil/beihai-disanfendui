---

import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProgramsSection from '../components/ProgramsSection.astro';
import NewsSection from '../components/NewsSection.astro';
import '../styles/global.css';

const activityHighlights = [
  {
    title: 'Drill & Discipline',
    description: 'Structured drill sessions that build teamwork, precision, and respect.',
    href: '/activities/drill-discipline',
    imageSrc: '/activities/drill.JPG',
    imageAlt: 'Cadets practicing drill formation outdoors'
  },
  {
    title: 'Adventure & Expeditions',
    description: 'Outdoor expeditions that grow resilience, survival skills, and leadership.',
    href: '/activities/adventure',
    imageSrc: '/activities/expedition.JPG',
    imageAlt: 'Cadets gathered before a hiking expedition'
  },
  {
    title: 'Community Service',
    description: 'Serving the local community through outreach, events, and partnerships.',
    href: '/activities/community-service',
    imageSrc: '/activities/community-service.JPG',
    imageAlt: 'Cadets working together during a community service project'
  }
];
---

<Layout title="3rd Butterworth Company - Boys' Brigade Malaysia">
  <Fragment>

  </Fragment>
  <main>
    <Hero />
    <section class="mx-auto max-w-6xl px-4 pt-20 sm:px-6 lg:px-8">
      <div class="flex flex-col items-start justify-between gap-6 sm:flex-row sm:items-end">
        <div>
          <p class="text-sm font-semibold uppercase tracking-[0.25em] text-slate-100">Our Programs</p>
          <h2 class="mt-2 text-3xl font-bold text-white sm:text-4xl">Explore Our Core Activities</h2>
        </div>
        <a
          href="/activities"
          class="inline-flex items-center gap-2 text-sm font-semibold text-slate-200 transition hover:text-gold-100 focus:outline-none focus:ring-2 focus:ring-gold-400 focus:ring-offset-2 focus:ring-offset-slate-950"
        >
          View all activities
          <span aria-hidden="true">→</span>
        </a>
      </div>

      <div class="mt-10 grid gap-8 md:grid-cols-2 xl:grid-cols-3">
        {activityHighlights.map(({ title, description, href, imageSrc, imageAlt }) => (
          <a
            href={href}
            class="group flex flex-col overflow-hidden rounded-3xl border border-white/5 bg-slate-900/60 shadow-lg shadow-black/30 transition hover:-translate-y-1 hover:border-gold-400/40 hover:shadow-gold-500/20 focus:outline-none focus-visible:ring-2 focus-visible:ring-gold-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
          >
            <div class="relative h-48 w-full overflow-hidden">
              <img
                src={imageSrc}
                alt={imageAlt}
                class="h-full w-full object-cover transition duration-500 group-hover:scale-105"
                loading="lazy"
                decoding="async"
              />
              <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-slate-950/70 via-slate-900/0 to-transparent"></div>
            </div>
            <div class="flex flex-1 flex-col gap-3 p-6">
              <h3 class="text-xl font-semibold text-white">{title}</h3>
              <p class="text-sm text-slate-300">{description}</p>
              <span class="mt-auto inline-flex items-center text-sm font-semibold text-white transition group-hover:text-gold-100">
                Discover more
                <span aria-hidden="true" class="ml-1 transition group-hover:translate-x-1">→</span>
              </span>
            </div>
          </a>
        ))}
      </div>
    </section>
    <NewsSection />
  </main>
</Layout>
