---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import highlightsData from '../data/highlights.json';

// Sort by date (most recent first) and get top 5
const latestHighlights = highlightsData
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime())
  .slice(0, 5);

// Format date for display
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout title="Latest Updates - 3rd Butterworth Company">
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-gray-900 to-gray-800 py-20 sm:py-24 lg:py-32">
      <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
        <div class="text-center">
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-white mb-6 tracking-tight">
            Latest Updates
          </h1>
          <p class="text-xl sm:text-2xl text-gray-300 max-w-3xl mx-auto">
            Stay informed about our recent activities, achievements, and upcoming events.
          </p>
        </div>
      </div>
    </section>

    <!-- Latest Highlights Section -->
    <section class="bg-white py-20 sm:py-24 lg:py-32">
      <div class="max-w-5xl mx-auto px-6 sm:px-8 lg:px-12">
        <div class="space-y-16">
          {latestHighlights.map((highlight, index) => (
            <article class="group">
              <div class="grid md:grid-cols-5 gap-8 items-start">
                <!-- Image -->
                <div class="md:col-span-2">
                  <div class="relative overflow-hidden rounded-2xl aspect-[4/3]">
                    <img
                      src={highlight.imageSrc}
                      alt={highlight.title}
                      class="w-full h-full object-cover transition duration-500 group-hover:scale-105"
                      loading={index === 0 ? 'eager' : 'lazy'}
                      decoding="async"
                    />
                    <div class="absolute top-4 left-4">
                      <span class="inline-block px-3 py-1 text-xs font-semibold text-white bg-[#0071e3] rounded-full">
                        {highlight.category}
                      </span>
                    </div>
                  </div>
                </div>

                <!-- Content -->
                <div class="md:col-span-3">
                  <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <time datetime={highlight.date}>
                      {formatDate(highlight.date)}
                    </time>
                  </div>

                  <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4 group-hover:text-[#0071e3] transition-colors">
                    {highlight.title}
                  </h2>

                  <p class="text-lg text-gray-600 leading-relaxed mb-6">
                    {highlight.description}
                  </p>

                  <a
                    href={`/news/${highlight.slug}`}
                    class="inline-flex items-center text-base font-medium text-[#0071e3] hover:text-[#0077ed] transition-colors"
                  >
                    Read full story
                    <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </a>
                </div>
              </div>

              {index < latestHighlights.length - 1 && (
                <hr class="mt-16 border-gray-200" />
              )}
            </article>
          ))}
        </div>

        <!-- Empty State -->
        {latestHighlights.length === 0 && (
          <div class="text-center py-12">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-6">
              <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
            <h3 class="text-2xl font-semibold text-gray-900 mb-2">No updates yet</h3>
            <p class="text-gray-600">Check back soon for the latest news and updates.</p>
          </div>
        )}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gray-50 py-20 sm:py-24">
      <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
          Want to Learn More?
        </h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          Interested in joining the 3rd Butterworth Company or learning more about our programs?
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/about/company"
            class="inline-block bg-[#0071e3] text-white px-8 py-3.5 rounded-full font-medium text-base hover:bg-[#0077ed] transition-colors duration-200 cursor-pointer"
          >
            About Us
          </a>
          <a
            href="/contact"
            class="inline-block bg-white text-gray-900 border border-gray-300 px-8 py-3.5 rounded-full font-medium text-base hover:bg-gray-50 transition-colors duration-200 cursor-pointer"
          >
            Get in Touch
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
