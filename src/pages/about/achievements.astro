---
import Layout from '../../layouts/Layout.astro';
import PeopleGrid from '../../components/PeopleGrid';
import type { PeopleCollection } from '../../data/types';

// Import data from JSON files
import foundersData from '../../data/achievements/founders-award.json';
import presidentsData from '../../data/achievements/presidents-award.json';
import honorableMentionsData from '../../data/achievements/honorable-mentions.json';

const foundersAward = (foundersData as PeopleCollection).people;
const presidentsAward = (presidentsData as PeopleCollection).people;
const honorableMentions = (honorableMentionsData as PeopleCollection).people;
---

<Layout title="Achievements - 3rd Butterworth Company">
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="pt-24 pb-16 px-6 sm:px-8 lg:px-12 bg-gray-50">
      <div class="mx-auto max-w-7xl text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 tracking-tight">
          Achievements & Milestones
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Celebrating the accomplishments and recognition earned by our dedicated members.
        </p>
      </div>
    </section>

    <!-- Founder's Award Section -->
    <section class="py-16 px-6 sm:px-8 lg:px-12 ">
      <div class="mx-auto max-w-7xl">
        <div class="text-center mb-16">
          <div class="flex justify-center mb-8">
            <img
              src="/awards/1 Founder_s.png"
              alt="Founder's Award"
              class="w-32 h-32 sm:w-40 sm:h-40"
            />
          </div>
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4 tracking-tight">
            Founder's Award Recipients
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            The highest honor in The Boys' Brigade, recognizing exceptional dedication and service.
          </p>
        </div>
        <PeopleGrid person={foundersAward} client:load />
      </div>
    </section>
    <section class="py-16 px-6 sm:px-8 lg:px-12">
      <div class="mx-auto max-w-7xl">
        <div class="text-center mb-16">
          <div class="flex justify-center mb-8">
            <img
              src="/awards/2 President_s.png"
              alt="President's Award"
              class="w-32 h-32 sm:w-40 sm:h-40"
            />
          </div>
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4 tracking-tight">
            President's Award Recipients
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            The second highest honor in The Boys' Brigade, recognizing exceptional dedication and service.
          </p>

        </div>
        <PeopleGrid person={presidentsAward} client:load />
      </div>
    </section>

    <!-- Honorable Mentions Section -->
    <section class="py-16 px-6 sm:px-8 lg:px-12 ">
      <div class="mx-auto max-w-7xl">
        <div class="text-center mb-16">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4 tracking-tight">
            Honorable Mentions
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Recognizing our discharged members who have received the President's Award or Founder's Award for their exceptional service.
          </p>
        </div>
        <PeopleGrid person={honorableMentions} client:load />
      </div>
    </section>
  </main>
</Layout>
