---
import Layout from '../../layouts/Layout.astro';
import Person from '../../components/Person.astro';
---

<Layout title="Leadership - 3rd Butterworth Company">
  <main class="mx-auto max-w-6xl px-4 pt-28 pb-20 sm:px-6 lg:px-8">
    <div class="mb-12 text-center bg-slate-800 p-4 rounded-2xl shadow-lg">
      <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4">Our Leadership Team</h1>
      <p class="text-lg text-slate-200 max-w-2xl mx-auto">
        Meet the dedicated individuals who lead and inspire our company, fostering growth, discipline, and community spirit among our members.
      </p>
    </div>
    <div class="grid gap-8 justify-items-center sm:grid-cols-2 lg:grid-cols-3">
      <div class="flex w-full justify-center">
        <Person
          name="Koh Hui Yee"
          rank="Chaplain"
          photoSrc="/headshots/oc/00_HY.jpg"
          portfolio="Christian Education"
          photoPosition="object-top"
          photoScale="scale-105"
        />
      </div>
      <div class="flex w-full justify-center">
        <Person
          name="LUKE TENG"
