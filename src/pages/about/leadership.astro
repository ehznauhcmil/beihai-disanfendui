<Layout title="Leadership - 3rd Butterworth Company">
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="pt-24 pb-16 px-6 sm:px-8 lg:px-12 bg-gray-50">
      <div class="mx-auto max-w-7xl text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 tracking-tight">
          Our Leadership Team
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Meet the dedicated individuals who lead and inspire our company, fostering growth,
          discipline, and community spirit among our members.
        </p>
      </div>
    </section>

    <!-- Leadership Grid -->
    <section class="py-16 px-6 sm:px-8 lg:px-12">
      <div class="mx-auto max-w-7xl">
        <LeadershipGrid leaders={leadershipTeam} className="pb-8 sm:pb-4" client:load />
      </div>
    </section>

    <!-- Helpers Section -->
    <section class="py-16 px-6 sm:px-8 lg:px-12 bg-gray-50">
      <div class="mx-auto max-w-7xl">
        <div class="text-center mb-16">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4 tracking-tight">
            Our Helpers
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            The young supporters who lend their expertise across music, events, and operations to
            keep our company thriving.
          </p>
        </div>
        <LeadershipGrid leaders={helperTeam} client:load />
      </div>
    </section>
  </main>
</Layout>
