---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Camps & Events - 3rd Butterworth Company">
  <main class="bg-white">
    <section class="pt-24 pb-20 px-6 sm:px-8 lg:px-12 min-h-[80vh] flex items-center justify-center">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-8">
          <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 tracking-tight">
          Camps & Events
        </h1>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          This page is currently being developed. Check back soon to learn about our exciting camps and special events.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/activities"
            class="inline-block bg-[#0071e3] text-white px-8 py-3.5 rounded-full font-medium text-base hover:bg-[#0077ed] transition-all hover:scale-105"
          >
            View All Activities
          </a>
          <a
            href="/"
            class="inline-block bg-gray-100 text-gray-900 px-8 py-3.5 rounded-full font-medium text-base hover:bg-gray-200 transition-all"
          >
            Go Home
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
