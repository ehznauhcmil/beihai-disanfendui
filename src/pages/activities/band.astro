---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Company Band - 3rd Butterworth Company">
  <main class="bg-white">
    <section class="pt-24 pb-20 px-6 sm:px-8 lg:px-12 min-h-[80vh] flex items-center justify-center">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-8">
          <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
          </svg>
        </div>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 tracking-tight">
          Company Band
        </h1>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          This page is currently being developed. Check back soon to learn about our marching band program.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/activities"
            class="inline-block bg-[#0071e3] text-white px-8 py-3.5 rounded-full font-medium text-base hover:bg-[#0077ed] transition-colors duration-200 cursor-pointer"
          >
            View All Activities
          </a>
          <a
            href="/"
            class="inline-block bg-gray-100 text-gray-900 px-8 py-3.5 rounded-full font-medium text-base hover:bg-gray-200 transition-colors duration-200 cursor-pointer"
          >
            Go Home
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
